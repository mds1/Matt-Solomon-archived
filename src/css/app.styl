// app global css

// =============================================================================
//                                BACKGROUND
// =============================================================================
// Background made with https://trianglify.io/, width="1920" height="2880"
.header {
  // background-image: url('../assets/background.svg');
  background: $background
}

.background-image {
  background-image: url('../assets/background.svg');
}

// =============================================================================
//                       SITE DIMENSIONS AND SPACING
// =============================================================================

.all-content-format {
  width: 100%
  max-width: 1023px
  margin: 0 auto
  }

.no-left-padding {
  padding-left: 0;
}

.negative-top-margin {
  margin-top: -1rem;
}

.reduce-li-spacing {
  margin-top: -0.75rem;
}

.project-picture {
  display: block;
  width: 100%;
  height: auto;
}

.vertical-center {
  margin: 0;
  position: absolute;
  top: 50%;
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

// =============================================================================
//                                  LISTS
// =============================================================================
.list--list-item {
  background: $background;
  margin-bottom: 2%;
}

// =============================================================================
//                                  FONTS
// =============================================================================

// Header style modeled after the overline option in Quasar's QItemLabel
h1, h2, h3, .header--overline {
  color: $darktext
  font-weight: 500;
  letter-spacing: 0.16667em;
  line-height: 2rem;
  text-transform: uppercase
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
}

h4, h5 {
  color: $darktext
  letter-spacing: 0.083333em;
  line-height: 2rem;
  text-transform: uppercase
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
}

p, a, li, .p-font {
  line-height: 1.5rem;
  color: $darktext
  font-size: 1rem
}

.subheader--overline {
  font-weight: 400;
  line-height: 2rem;
  color: $darktext
  font-variant: all-small-caps
}

.no-text-decoration {
  text-decoration: none;
}

.text-dark {
  color: $darktext
}

// Centered elements
.center-text {
  text-align: center;
}

// Small help text / supplemental info
.helper-text {
  font-size: small;
}

// Collapsible "More info" type of elements
.more-info {
  font-size: 0.1 rem;
}

// Menu drawer CSS
.drawer {
  color: $darktext;
  background-image: url('../assets/background.svg');
}

hr {
  border: 1px solid $accent;
  width: 100%;
  margin-top: 2%;
  margin-bottom: 3%;
}