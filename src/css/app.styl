// app global css
@import '~quasar-variables';

// Header style modeled after the overline option in Quasar's QItemLabel
.header--overline {
  font-weight: 500;
  line-height: 2rem;
  letter-spacing: 0.16667em;
  color: rgba(0,0,0,0.7);
  text-transform: uppercase
}

.main-content-format {
  // TODO: scale max-width based on page-width, and account for header
  margin: 0 auto;
  max-width: 70%;
}

#q-app {
  // background: $background;
}

// Centered elements
.center-text {
  text-align: center;
}

// Small help text / supplemental info
.helper-text {
  font-size: small;
}

// Collapsible "More info" type of elements
.more-info {
  font-size: 0.1 rem;
}

// Menu drawer CSS
.drawer {
  color: $darktext;
  background: linear-gradient(110deg, $secondary 0%, $accent 35%, $primary 80%);
}

h1, h2, h3 {
  color: $darktext;
}

hr {
  border: 1px solid $primary;
  width: 100%;
  margin-top: 2%;
  margin-bottom: 3%;
}